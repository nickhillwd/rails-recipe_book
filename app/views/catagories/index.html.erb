
<div class="scrollable">
  <% if @ingredients.present? || @recipes.present? %>

    <% if @recipes.present? %>
      <% @recipes.each do |recipe| %>
        <h3><%= link_to "#{recipe.recipe_name}", recipe_path(recipe) %></h3>
      <% end %>
    <% end %>

    <% if @ingredients.present? %>
      <% @ingredients.each do |ingredient| %>
        <h3> <%= ingredient.ingredient_name %> </h3>
      <% end %>
    <% end %>

  <% else %>
    <h3>There are no SEARCH RESULT containing: <%= params[:search] %></h3>
  <% end %>

</div>